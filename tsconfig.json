{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@routes/*": ["./routes/*"],
      "@constants/*": ["./constants/*"],
      "@modules/*": ["./modules/*"],
      "@helpers/*": ["./helpers/*"],
      "@utils/*": ["./utils/*"],
      "@middlewares/*": ["./middlewares/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
